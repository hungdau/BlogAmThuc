@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<head>
    <style>
        .navbar-brand {
            color: black !important;
        }

        .nav-link {
            color: black !important;
        }

        .form-label {
            margin-left: 20px !important;
        }

        .h22 {
            color: red !important;
            text-align: center;
        }
    </style>
</head>

@*<h2>@ViewData["Title"]</h2>*@
<div class="row">
    <div class="m-auto w-25">
        <section style="margin-top:100px">
            <form id="account" method="post">
                <h2 class="h22">Đăng Nhập</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating" style="margin-top: 10px; margin-bottom: 10px">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="line-height: 45px; height: 45px; padding: 0px">Log in</button>
                </div>
                <div style="font-size: 16px;">
                    <p style="margin-bottom: -10px">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p style="margin-bottom: -10px">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p style="margin-bottom: -10px">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
<div style="margin-bottom: 40px"></div>