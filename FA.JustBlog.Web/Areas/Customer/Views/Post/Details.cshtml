@model Post
@{
    ViewData["Title"] = "Details post";
    var mostViewPost = _unitOfWork.PostRepository.GetMostViewedPost(5);
    var latestPost = _unitOfWork.PostRepository.GetLatestPost(5);
    var listTagName = _unitOfWork.TagRepository.GetAll();
}
<style>
    .post-heading {
        text-align: center;
    }
</style>
@section Header{
    <header class="masthead" style="background-image: url('/custom/client/img/@Model.Image')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1>@Model.Title</h1>
                        <h2 class="subheading">@Model.ShortDescription</h2>
                        <span class="meta">Posted @Model.PostedOn with rate @Model.Rate by @Model.ViewCount view(s)</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
}


