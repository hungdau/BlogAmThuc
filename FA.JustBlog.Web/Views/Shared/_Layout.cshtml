<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FA.JustBlog.Web</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FA.JustBlog.Web.styles.css" asp-append-version="true" />
    <!-- Swiper -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
    <!-- Bootstrap core CSS -->
    <link href="~/custom/client/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="~/custom/client/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="~/custom/client/css/clean-blog.min.css" rel="stylesheet">
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="/Customer/Post/Index">Blog Ẩm Thực</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/Post/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/Home/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/Home/Contact">Contact</a>
                    </li>
                    <li class="nav-item has-dropdown">
                        <a class="nav-link nav-link dropdown-toggle" href="/Customer/Category/Index">Category</a>
                        <ul class="is-dropdown">
                            <partial name="_listCategory" />
                        </ul>
                    </li>

                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- Page Header -->
    @RenderSection("Header", required:false)



    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">

            @RenderBody()
            @RenderSection("ListPost", required: false)
        </div>

        @*<div class="col-lg-3 mx-auto">
            <partial name="_PartialAboutCard" />
        </div>*@
    </div>

    <hr>

    <!-- Footer -->
    <partial name="_PartialFooter" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Bootstrap core JavaScript -->
    <script src="~/custom/client/vendor/jquery/jquery.min.js"></script>
    <script src="~/custom/client/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/custom/client/js/clean-blog.min.js"></script>
    <!--Swiper-->
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script src="~/js/main.js"></script>
</body>

</html>

