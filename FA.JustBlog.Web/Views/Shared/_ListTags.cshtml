@{
}
@foreach (var item in Model)
{
    var countTags = _unitOfWork.PostRepository.CountPostsForTag(item.Name);
    <a style="font-size: 16px; font-weight:600" href="/Customer/Post/GetPostByTag?tagName=@item.Name">
        @item.Name  <span style="float: right">@countTags</span>
    </a>
    <hr/>
}

